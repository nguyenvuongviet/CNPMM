<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh Sách Người Dùng</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#3B82F6",
              secondary: "#F59E0B",
              danger: "#EF4444",
              bgLight: "#F9FAFB",
            },
          },
        },
      };
    </script>
    <style>
      /* Tùy chỉnh thêm nếu cần */
      .table-container {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body class="bg-bgLight min-h-screen py-6">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">
        Danh Sách Người Dùng
      </h1>
      <!-- Nút thêm người dùng mới -->
      <a
        href="/crud"
        class="inline-block bg-primary text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 transition mb-6"
        >Thêm Người Dùng Mới</a
      >
      <a
        href="/"
        class="inline-block bg-gray-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-600 transition mb-6"
        >Quay Lại Trang Chủ</a
      >
      <div class="table-container bg-white rounded-lg overflow-hidden">
        <table class="w-full border-collapse">
          <thead>
            <tr class="bg-gray-800 text-white">
              <th class="py-3 px-4 text-left text-sm font-semibold">ID</th>
              <th class="py-3 px-4 text-left text-sm font-semibold">Email</th>
              <th class="py-3 px-4 text-left text-sm font-semibold">Họ</th>
              <th class="py-3 px-4 text-left text-sm font-semibold">Tên</th>
              <th class="py-3 px-4 text-left text-sm font-semibold">Địa chỉ</th>
              <th class="py-3 px-4 text-left text-sm font-semibold">
                Hành động
              </th>
            </tr>
          </thead>
          <tbody>
            <% dataTable.forEach(user => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-3 px-4 text-gray-700"><%= user.id %></td>
              <td class="py-3 px-4 text-gray-700"><%= user.email %></td>
              <td class="py-3 px-4 text-gray-700"><%= user.firstName %></td>
              <td class="py-3 px-4 text-gray-700"><%= user.lastName %></td>
              <td class="py-3 px-4 text-gray-700"><%= user.address %></td>
              <td class="py-3 px-4">
                <a
                  href="/edit-crud?id=<%= user.id %>"
                  class="inline-block bg-secondary text-white font-medium py-1 px-3 rounded hover:bg-yellow-600 transition"
                  >Sửa</a
                >
                <a
                  href="/delete-crud?id=<%= user.id %>"
                  class="inline-block bg-danger text-white font-medium py-1 px-3 rounded hover:bg-red-600 transition"
                  onclick="return confirm('Bạn có chắc muốn xóa người dùng này?')"
                  >Xóa</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
